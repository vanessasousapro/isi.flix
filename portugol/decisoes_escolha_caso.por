programa {
	funcao inicio() {
		inteiro valor
		escreva("Digite um valor: ")
		leia(valor)
		escolha(valor){
		    caso 1:
		        escreva("Digitou o valor 1")
		        pare
		    caso 2:
		        escreva("Digitou o valor 2")
		        pare
		    caso 3:
		        escreva("Digitou o valor 3")
		        pare
		    caso contrario:
		        escreva("Digitou qualquer outro valor")
		}
	}
}
